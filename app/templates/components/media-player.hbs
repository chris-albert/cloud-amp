<div class="now-playing row">
    <div class="time col-md-3">
      {{time}}
    </div>
    <div class="col-md-9">
        <div class="whats-playing text-right">
          {{trackTitle}}
        </div>
        <div class="specs row">
            <div class="col-md-6 spec-status">
                <span class="glyphicon glyphicon-{{statusIcon}}" aria-hidden="true"></span>
            </div>
            <div class="col-md-2">
              {{bitRate}} <span class="dark">KBPS</span>
            </div>
            <div class="col-md-2">
              {{sampleRate}} <span class="dark">KHZ</span>
            </div>
            <div class="col-md-2">
                <span class="dark">{{channels}}</span>
            </div>
        </div>
    </div>
</div>
<div class="eq-volume row">
    <div class="eq col-md-6">
        <canvas class="eq-canvas" width="128" height="30"></canvas>
    </div>
    <div class="volume col-md-6 row">
        <div class="col-md-3">
            <button type="button" class="btn btn-default btn-xs" {{action "mute"}}>
                <span class="glyphicon glyphicon-volume-{{muteIcon}}" aria-hidden="true"></span>
            </button>
        </div>
        <div class="col-md-9">
            <div class="media-slider volume-slider"></div>
        </div>
    </div>
</div>
<div class="media-slider progress-slider">
    <div class="hidden">{{percentComplete}}{{bufferedAhead}}</div>
    <div class="slider-buffered"></div>
</div>
<div class="controls">
    <div class="row">
        <div class="col-md-6">
            <button type="button" class="btn btn-default btn-xs" {{action "prev"}}>
                <span class="glyphicon glyphicon-step-backward" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-default btn-xs" {{action "play"}}>
                <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-default btn-xs" {{action "pause"}}>
                <span class="glyphicon glyphicon-pause" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-default btn-xs" {{action "stop"}}>
                <span class="glyphicon glyphicon-stop" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-default btn-xs" {{action "next"}}>
                <span class="glyphicon glyphicon-step-forward" aria-hidden="true"></span>
            </button>
        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-default btn-xs" {{action "random"}}>
                <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-default btn-xs" {{action "repeat"}}>
                <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>
