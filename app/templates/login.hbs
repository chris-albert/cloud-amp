<div class="login">
    <h2>Google Play Login</h2>
    {{#if loggedIn}}
        <h4>Logged In</h4>
        <button type="submit" class="btn btn-default" {{action "logout"}}>Log Out</button>
    {{else}}
    <form>
        <div class="form-group">
            <label for="email">Email</label>
            {{input value=email classNames="form-control" placeholder="Email"}}
        </div>
        <div class="form-group">
            <label for="password">Password</label>
          {{input value=password classNames="form-control" placeholder="Password" type="password"}}
        </div>

        <button type="submit" class="btn btn-default" {{action "login"}}>Log In</button>
    </form>
  {{/if}}
    <p class="text-danger">{{error}}</p>
</div>